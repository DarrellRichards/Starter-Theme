{% extends 'main.twig' %}
{% block content %}
	<div class="row">
		<h4>Posts By: {{post.author}}</h4>
		{% for post in posts %}
			<div class="col-md-12">
				<a href="{{post.permalink}}"><h3>{{post.title}}</h3></a>
				<p>Posted on: {{post.display_date}}</p>
				{{ post.get_preview(30) }}
				<hr>
			</div>
		{% endfor %}
	</div>
{% endblock %}